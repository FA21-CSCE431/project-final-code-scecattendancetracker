<p id="notice"><%= notice %></p>

<%= link_to 'Home', root_path %>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Event ID</th>
      <th>Event Title</th>
      <th>Event Start Date</th>
      <th>Event End Date</th>
      <th>Event Description</th>
      <th>Event Location</th>
      <th>Event Ratings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= link_to event.title, attendances_path(:title => @events.find(event.id).title) %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <% if Feedback.where(:event_id => event.id).average(:event_rating_score).nil? %>
          <td><%= 'N/A' %></td>
        <% else %>
          <td><%= link_to Feedback.where(:event_id => event.id).average(:event_rating_score), feedbacks_path(:id => event.id) %></td>
        <%end%>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Mark Attendance', new_attendance_path({event_id: event.id})%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

