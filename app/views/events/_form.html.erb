<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :eventTitle %>
    <%= form.text_field :eventTitle %>
  </div>

  <div class="field">
    <%= form.label :eventStartDate %>
    <%= form.datetime_select :eventStartDate %>
  </div>

  <div class="field">
    <%= form.label :eventEndDate %>
    <%= form.datetime_select :eventEndDate %>
  </div>

  <div class="field">
    <%= form.label :eventDescription %>
    <%= form.text_field :eventDescription %>
  </div>

  <div class="field">
    <%= form.label :eventLocation %>
    <%= form.text_field :eventLocation %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
